<!doctype html>
<html>
<head>
	<title>{{title .}}</title>
	<meta name="viewport" content="width=device-width, minimum-scale=1.0, initial-scale=1.0, user-scalable=yes">
	<meta charset="utf-8">
	<script src="/components/webcomponentsjs/webcomponents.js"></script>
	<link rel="import" href="/components/font-roboto/roboto.html">
	<link rel="import" href="/components/core-header-panel/core-header-panel.html">
	<link rel="import" href="/components/core-toolbar/core-toolbar.html">
	<link rel="import" href="/components/paper-tabs/paper-tabs.html">
	<link rel="import" href="/components/core-icon-button/core-icon-button.html">
	<link rel="import" href="/components/paper-button/paper-button.html">
	<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/normalize/3.0.1/normalize.min.css">
	<link rel="stylesheet" href="/css/style.css">
	<link href='//fonts.googleapis.com/css?family=PT+Serif:400,700,400italic&amp;subset=latin,latin-ext,cyrillic-ext,cyrillic' rel='stylesheet' type='text/css'>
</head>
<body unresolved>
	<core-header-panel>
		<core-toolbar class="tall">
			<div class="middle"><a href="{{ hostname . }}" class="title"><img src="/img/logo.svg" class="logo" />{{ pagetitle . }}</a> - {{ description . }}</div>
			<div class="bottom fit" style="height: 60px; background-color: rgb(63,63,63); color: white;" layout horizontal center>
				<paper-button><a href="/">Home</a></paper-button>
				{{ if loggedin .Session }}
				<paper-button><a href="/user">User</a></paper-button>
				<paper-button><a href="/user/logout">Log out</a></paper-button>
				{{ else }}
				<paper-button><a href="/user/login">Log in</a></paper-button>
				{{ if allowregistrations . }}<paper-button><a href="/user/register">Register</a></paper-button>{{ end }}
				{{ end }}
				<paper-button><a href="/feeds/rss">RSS</a></paper-button>
				<span flex></span>
				<form class="search" method="post" action="/post/search">
					<input name="query" type="search" spellcheck="false" required="required" placeholder="Search ...">
				</form>
			</div>
		</core-toolbar>
		<div class="text">
			{{ yield }}
		</div>
	</core-header-panel>
	<script type="text/javascript" defer>
		/* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
		var disqus_shortname = 'nobatteriesnet'; // required: replace example with your forum shortname

		/* * * DON'T EDIT BELOW THIS LINE * * */
		(function () {
		var s = document.createElement('script'); s.async = true;
		s.type = 'text/javascript';
		s.src = '//'+disqus_shortname+'.disqus.com/count.js';
		(document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
		}());
	</script>
	<script>
		(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		})(window,document,'script','//www.google-analytics.com/analytics.js','ga');
		ga('create', 'UA-57132507-1', 'auto');
		ga('send', 'pageview');
	</script>
</body>
</html>
