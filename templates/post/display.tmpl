<article>
{{ if .Data.Post.Published }}
	<link rel="import" href="/post-card.html">
	<post-card>
		<img class="avatar" src="{{ .Data.User.Avatar }}" width="70" height="70" />
		<span class="title">{{ .Data.Post.Title }}</span>
		<span class="poster">{{ .Data.User.Name }}</span>
		<span class="datetime">{{ .Data.Post.Date }}</span>
		<mark-down>
			{{ .Data.Post.Markdown }}
		</mark-down>
	</post-card>
{{ else }}
	<link rel="import" href="/post-card-page.html">
	<post-card-page>
		<span class="title">{{ .Data.Post.Title }}</span>
		<mark-down>
			{{ .Data.Post.Markdown }}
		</mark-down>
	</post-card-page>
{{ end }}
